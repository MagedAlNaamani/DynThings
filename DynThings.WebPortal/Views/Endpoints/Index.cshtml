@model IEnumerable<DynThings.WebPortal.Models.Endpoint>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

    <input type="search" id="txtEndPointSearch" onkeydown="if (event.keyCode == 13) { LoadPart_EndPointListDiv(); return false; }" />
    <button type="button" class="button"  onclick="LoadPart_EndPointListDiv()">Search</button>

<div id="divEndPointsList">

</div>


<script>
    $(document).ready(function () {
        LoadPart_EndPointListDiv();
    });


    function LoadPart_EndPointListDiv() {
        var loadingpart = LoadDivLoading();
        $("#divEndPointsList").html(loadingpart);
        $.ajax({
            url: '@Url.Content("~/")' + 'EndPoints/GetListPV?searchfor=' + $(txtEndPointSearch).val() + '&recordsperpage=2',
            //page=" + $("#DynConfigCurrentPage").html,
            type: "GET",
        })
            .done(function (partialViewResult) {
                $("#divEndPointsList").html(partialViewResult);
            });
        return false;
    };


    $(document).ready(function () {
        $(document).on("click", "#EndPointsListPager a[href]", function () {
            var loadingpart = LoadDivLoading();
            $("#divEndPointsList").html(loadingpart);
            $.ajax({
                url: $(this).attr("href") + "&searchfor=" + $(txtEndPointSearch).val() + '&recordsperpage=2',
                type: 'GET',
                cache: false,
                success: function (result) {
                    $("#divEndPointsList").html(result);
                    return false;
                }
            });
            return false;
        });
    });
</script>