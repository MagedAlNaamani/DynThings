@model DynThings.WebPortal.Models.Endpoint

@using (Html.BeginForm("Edit", "EndPoints", FormMethod.Post, new { id = "EndPointEditForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="min-width:600px">
        <h4>Endpoint</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="grid">
            <div class="row cells12">
                <div class="cell colspan2">
                    @Html.LabelFor(model => model.GUID, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="cell colspan10">
                    @Html.EditorFor(model => model.GUID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GUID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row cells12">
                <div class="cell colspan2">
                    @Html.LabelFor(model => model.KeyPass, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="cell colspan10">
                    @Html.EditorFor(model => model.KeyPass, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.KeyPass, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row cells12">
                <div class="cell colspan2">
                    @Html.LabelFor(model => model.PinCode, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="cell colspan10">
                    @Html.EditorFor(model => model.PinCode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PinCode, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row cells12">
                <div class="cell colspan2">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="cell colspan10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row cells12">
                <div class="cell colspan2">
                    @Html.LabelFor(model => model.TypeID, "TypeID", htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="cell colspan10">
                    @Html.DropDownList("TypeID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TypeID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row cells12">
                <div class="cell colspan2">
                    @Html.LabelFor(model => model.ColorID, "ColorID", htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="cell colspan10">
                    @Html.DropDownList("ColorID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ColorID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row cells12">
                <div class="cell colspan2">
                    @Html.LabelFor(model => model.IconID, "IconID", htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="cell colspan10">
                    @Html.DropDownList("IconID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IconID, "", new { @class = "text-danger" })
                </div>
            </div>

            <hr />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="button success" />
                </div>
            </div>
        </div>
    </div>
}


<script>
    $(document).ready(function () {
        $("#EndPointEditForm").on("submit", function (event) {
            event.preventDefault();
            //$("#DynConfigEditSavingDiv").show();

            var url = $(this).attr("action");
            var formData = $(this).serialize();
            $.ajax({
                url: url,
                type: "POST",
                data: formData,
                dataType: "json",
                success: function (resp) {
                }
            })
            LoadPart_EndPointDetailsDiv('@Model.ID')
            closeDialog('#dialogDiv');

        });

    });

</script>