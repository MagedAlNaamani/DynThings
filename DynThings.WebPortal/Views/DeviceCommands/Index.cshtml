@model IEnumerable<DynThings.Data.Models.DeviceCommand>
@{
    ViewBag.Title = "DeviceCommands";
}
<div class="container">
    <div class="page-header">
        <h1>Device's Commands</h1>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="button" class="btn btn-info" onclick="LoadPart_DialogDeviceCommandAdd()" data-toggle="modal" data-target="#mdl">Add</button>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <input type="search" id="txtDeviceCommandSearch" class="form-control" onkeydown="if (event.keyCode == 13) { LoadPart_DeviceCommandListDiv(); return false; }" />
                <div class="input-group-btn">
                    <button type="button" class="btn btn-primary" onclick="LoadPart_DeviceCommandListDiv()">Search</button>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="well well-lg">
        <div id="divDeviceCommandsList">
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        LoadPart_DeviceCommandListDiv();
    });


    function LoadPart_DeviceCommandListDiv() {
        var loadingpart = LoadDivLoading();
        $("#divDeviceCommandsList").html(loadingpart);
        $.ajax({
            url: '@Url.Content("~/")' + 'DeviceCommands/ListPV?searchfor=' + $(txtDeviceCommandSearch).val() + '&recordsperpage=0',
            //page=" + $("#DynConfigCurrentPage").html,
            type: "GET",
        })
            .done(function (partialViewResult) {
                $("#divDeviceCommandsList").html(partialViewResult);
            });
        return false;
    };

    $(document).ready(function () {
        $(document).on("click", "#DeviceCommandsListPager a[href]", function () {
            var loadingpart = LoadDivLoading();
            $("#divDeviceCommandsList").html(loadingpart);
            $.ajax({
                url: $(this).attr("href") + "&searchfor=" + $(txtDeviceCommandSearch).val() + '&recordsperpage=0',
                type: 'GET',
                cache: false,
                success: function (result) {
                    $("#divDeviceCommandsList").html(result);
                    return false;
                }
            });
            return false;
        });
    });

    function LoadPart_DialogDeviceCommandAdd() {
        var loadingpart = LoadDivLoading();
        $("#modal").html(loadingpart);
        $.ajax({
            url: '@Url.Content("~/")' + 'DeviceCommands/addpv',
            //page=" + $("#DynConfigCurrentPage").html,
            type: "GET",
        })
        .done(function (partialViewResult) {
            $("#modal").html(partialViewResult);
        });
    }
</script>

