
@model IPagedList<DynThings.Data.Models.EndPointCommand>
<div>
    <div class="list-group">
        @foreach (var item in Model)
        {
            <div class="list-group-item" style="cursor:pointer">
                <div class="row" onclick="" >
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <h5><span><strong>@item.Endpoint.Thing.Title</strong></span></h5>
                        <h5><span>@item.Endpoint.Thing.ThingCategory.Title</span></h5>
                    </div>

                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <button id="btn_Command_@item.ID" class="btn btn-primary" style="width:100%" data-toggle="modal" onclick="LoadPart_DialogEndPointCommandExecute(@item.ID)" data-target="#mdl">@item.Title</button> 
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <h5><p>@item.Description</p></h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-9">
                        <h6><span>Command code: "@item.CommandCode"</span></h6>
                    </div>
                    <div class="col-lg-3">
                        <button id="btn_CommandConfig_@item.ID" class="btn btn-info btn-sm" style="width:100%" onclick="LoadEndPointCommandEditor(@item.ID)" data-toggle="modal" data-target="#mdl">Config</button>
                    </div>
                </div>

            </div>
        }
    </div>

  
</div>
