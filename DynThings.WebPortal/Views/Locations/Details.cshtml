@model DynThings.Data.Models.Location

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="page-header">
        <h1>Location Details</h1>
    </div>
    <div class="row">
        <div class="col-lg-12">
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#tabLocationmain">Main</a></li>
                <li><a data-toggle="tab" href="#tabLocationGeoLocation">Geo Location</a></li>
                <li><a data-toggle="tab" href="#tabLocationDevices">Devices</a></li>
                <li><a data-toggle="tab" href="#tabLocationViews">Dev Keys</a></li>
            </ul>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="tab-content">
                        <div id="tabLocationmain" class="tab-pane fade in active">
                            <div id="divLocationMain">
                            </div>
                        </div>
                        <div id="tabLocationGeoLocation" class="tab-pane fade">
                            <div id="divLocationGeoLocation">
                            </div>
                        </div>
                        <div id="tabLocationDevices" class="tab-pane fade">
                            <div class="row">
                                <div class="col-md-6">
                                    <button type="button" class="btn btn-info" onclick="LoadPart_DeviceLookup('#modal')" data-toggle="modal" data-target="#mdl">Import</button>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <input type="search" id="txtDevicesSearch" class="form-control" onkeydown="if (event.keyCode == 13) { alert(@Model.ID); return false; }" />
                                        <div class="input-group-btn">
                                            <button type="button" class="btn btn-primary" onclick="LoadPart_DevicesListByLocationIDDiv(@Model.ID)">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="well well-lg">
                                <div id="divDevicesList">
                                </div>
                            </div>
                        </div>
                        <div id="tabLocationDevkeys" class="tab-pane fade">
                            <div id="divLocationDevkeys">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scriptfiles{
    <script src="~/Scripts/MsMaps/mapcontrol.js"></script>
    <script src="~/DynScripts/Locations.js"></script>
    <script src="~/DynScripts/Devices.js"></script>
}

@section scripts{
    <script>
        $(document).ready(function () {
            selectedLocation = @Model.ID
            LoadPart_LocationDetailsMainDiv('@Model.ID');
            LoadPart_LocationDetailsGeoLocationDiv('@Model.ID');
            LoadPart_DevicesListByLocationIDDiv('@Model.ID');
        });
    </script>
}
